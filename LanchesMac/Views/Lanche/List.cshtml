@using LanchesMac.ViewModels
@model LancheListViewModel

<div> <h2>@Model.CategoriaAtual</h2> </div>
<div class="row">

    @foreach (var lanche in Model.Lanches)
    {


        <div class="col">
            <!--4 colunas-->

            <div class="img-thumbnail">
                <img src="@lanche.ImagemUrl" class="rounded" alt="" />
            </div>

            <div class="caption">
                <h3 class="pull-right">Preço: @lanche.Preco.ToString("c")</h3>

                <h3>Lanche: @lanche.Nome</h3>
                <p>@lanche.DescricaoCurta</p>
            </div>
        </div>
    }

</div>